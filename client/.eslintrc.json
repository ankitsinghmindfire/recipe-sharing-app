{
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
     "eslint:recommended", 
     "plugin:react/recommended", 
     "plugin:import/errors",
     "plugin:react-hooks/recommended",
     "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "react-hooks","jsx-a11y","import"],
    "rules": {
    "react/prop-types": 0,
    "indent": ["error", 2],
    "linebreak-style": 1,
    "quotes": ["error", "double"]
    },
    "settings": {
    "react": {
      "version": "detect"
    }
  }
}